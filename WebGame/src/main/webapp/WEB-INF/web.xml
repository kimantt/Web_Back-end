<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>WebGame</display-name>
  <welcome-file-list>
    <welcome-file>view/main.jsp</welcome-file>
  </welcome-file-list>
  
    <error-page>
  	<error-code>404</error-code>
  	<location>/view/error_page/error_404.jsp</location>
  </error-page>
  
  <error-page>
  	<error-code>500</error-code>
  	<location>/view/error_page/error_500.jsp</location>
  </error-page>
  
  <resource-ref>
    <description>Oracle Connection Pool</description>
    <res-ref-name>jdbc/oracle</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
  </resource-ref>
</web-app>